<h1>Twitter</h1>
<form {{action 'addTweet' on='submit'}}>
	<p>{{input type="text" value=newTweet}}<button>send</button></p>

	<ul>
		{{#each tweets as |tweets|}}
		<li>{{tweets.user}}-{{tweets.tweet}}</li>
		{{else}}
		<p>no hay elementos</p>

		{{/each}}
	</ul>
</form>
