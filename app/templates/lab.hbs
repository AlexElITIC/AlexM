<h1>My lucky day:</h1>
<button {{action 'myLuckyDay' on='click'}}>presiona</button>
{{luckyDay}}

<ul>
{{#each weekDays as |day|}}
{{#unless day.number}}
<li>{{day.number}}-{{day.day}}</li>
{{/unless}}
{{/each}}
</ul>


{{input type="text" value = newDay}}
<button{{action 'addDay' on="click"}}>add new day</button>
